{{>nav}}

<div class="container" style="margin-top: 100px">
    <div class="row">
        <div class="col-6">
            <button onclick="pauseClock()" type="button" class="btn btn-primary btn-block mb-3 fichaje">Entrada</button>
            <div class="btn-group btn-block dropright">
                <button type="button" class="btn btn-success mb-3 fichaje dropdown-toggle" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false" style="width: 100%">Parada</button>
                <div class="dropdown-menu w-100">
                    <button onclick="pauseClock()" class="btn btn-secondary btn-block fichaje">Café</button>
                    <button onclick="pauseClock()" class="btn btn-secondary btn-block fichaje">Médico</button>
                    <button onclick="pauseClock()" class="btn btn-secondary btn-block fichaje">Comida</button>
                </div>
            </div>
            <button onclick="pauseClock()" type="button" class="btn btn-warning btn-block mb-3 fichaje">Volver</button>
            <button onclick="resetClock()" type="button" class="btn btn-danger btn-block fichaje">Finalizar</button>
        </div>
        <div class="col-6" onload="initClock()">
            <!--Contadores del reloj-->
            <div class="countdown">
                <div class="number">
                    <span id="Hours" />
                </div>
                <div class="number">
                    <span id="Minutes" />
                </div>
                <div class="number">
                    <span id="Seconds" />
                </div>
            </div>
        </div>
    </div>
</div>

