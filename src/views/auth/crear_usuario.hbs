<div class="container p-4 borderweb">
  <div class="row">
    <div class="col mx-auto">
      <div class="card text-center">
        <div class="card-header bg-info font-weight-bold">
          <h2>Crear Usuario</h2>
        </div>
        <div class="card-body">
          <form action="/createUser" method="POST">
            <div class="row">
              <div class="col-4">
                <div class="form-group">
                  <h6>Nombre</h6>
                  <input type="text" name="firstname" placeholder="Nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                  <h6>1<sup>er</sup> Apellido</h6>
                  <input type="text" name="lastname" placeholder="1º Apellido" class="form-control">
                </div>
                <div class="form-group">
                  <h6>2º Apellido</h6>
                  <input type="text" name="surname" placeholder="2º Apellido" class="form-control">
                </div>
              </div>
              <div class="col-4">
                <div class="form-group">
                  <h6>Correo electrónico</h6>
                  <input type="email" name="username" placeholder="Correo electrónico" class="form-control">
                </div>
                <div class="form-group">
                  <h6>Contraseña</h6>
                  <input type="password" name="password" placeholder="Contraseña" class="form-control">
                </div>
                <div class="form-group">
                  <h6>Repetir contraseña</h6>
                  <input type="password" name="repeatpassword" placeholder="Contraseña" class="form-control">
                </div>
              </div>
              <div class="col-4">
                <h6>Foto de perfil</h6>
                <div class="borderphoto">
                  <img class="img-thumbnail" src="/static/img/usuario.png">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <div class="form-group">
                  <h6>Fecha de nacimiento</h6>
                  <input type="date" name="born" placeholder="Fecha de Nacimiento" class="form-control">
                </div>
              </div>
              <div class="col-4">
                <div class="form-group">
                  <h6>Teléfono</h6>
                  <input type="text" name="phone" placeholder="Teléfono" class="form-control">
                </div>
              </div>
              <div class="col-4">
                  <h6>Puesto</h6>
                   <select type="text" name="job" placeholder="Puesto" class="form-control">
                      <option value="1">Administrador</option>
                      <option value="2">Jefe de Proyecto</option>
                      <option value="3">Programador senior</option>
                      <option value="4">Programador junior</option>
                    </select>
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <div class="form-group">
                  <h6>Dirección</h6>
                  <input type="text" name="adress" placeholder="Dirección" class="form-control">
                </div>
              </div>
              <div class="col 3">
                <div class="form-group">
                  <h6>Ciudad</h6>
                  <input type="text" name="city" placeholder="Ciudad" class="form-control">
                </div>
              </div>
              <div class="col-2">
                <div class="form-group">
                  <h6>CP</h6>
                  <input type="text" name="postcode" placeholder="CP" class="form-control">
                </div>
              </div>
              <div class="col-3">  
                <a>Provincia</a>
