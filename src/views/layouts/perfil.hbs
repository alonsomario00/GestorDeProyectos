<div class="container p-4 borderweb">
	<div class="row">
		<div class="col mx-auto">
			<div class="card text-center">
				<div class="card-header bg-info font-weight-bold">
					<h2>Ficha de Usuario</h2>
				</div>
				<div class="card-body">
					<form action="/perfil/updateProfile" method="POST">
						<div class="row">
							<div class="col-6">
								<div class="form-group">
									<h6>Nombre</h6>
									<input type="text" class="form-control" name="firstname" placeholder="Nombre"
										value="{{usuario.nombreUsuario}}">
								</div>
							</div>
							<div class="col-6">
								<div class="form-group">
									<h6>1<sup>er</sup> Apellido</h6>
									<input type="text" class="form-control" name="lastname" placeholder="1º Apellido"
										value="{{usuario.apellido1}}">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-6">
								<div class="form-group">
									<h6>2º Apellido</h6>
									<input type="text" class="form-control" name="surname" placeholder="2º Apellido"
										value="{{usuario.apellido2}}">
								</div>
							</div>
							<div class="col-6">
								<div class="form-group">
									<h6>Correo electrónico</h6>
									<input type="text" class="form-control" name="username"
										placeholder="Correo electrónico" value="{{usuario.correo}}" readonly>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-6">
								<div class="form-group">
									<h6>Teléfono</h6>
									<input type="text" class="form-control" name="phone" placeholder="Teléfono"
										value="{{usuario.telefono}}">
								</div>
							</div>
							<div class="col-6">
								<div class="form-group">
									<h6>Fecha de nacimiento</h6>
									<input type="date" class="form-control" name="born"
										placeholder="Fecha de nacimiento" value="{{usuario.nacimiento}}">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-10 offset-md-1">
								<div class="form-group">
									<h6>Dirección</h6>
									<input type="text" class="form-control" name="adress" placeholder="Dirección"
										value="{{usuario.direccion}}">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-4 offset-md-1">
								<div class="form-group">
									<h6>Ciudad</h6>
									<input type="text" class="form-control" name="city" placeholder="Ciudad"
										value="{{usuario.ciudad}}">
								</div>
							</div>
							<div class="col-2">
								<div class="form-group">
									<h6>CP</h6>
									<input type="text" class="form-control" name="postcode" placeholder="CP"
										value="{{usuario.cp}}">
								</div>
							</div>
							<div class="col-4">
								<div class="form-group">
									<h6>Provincia</h6>
									{{!-- <input type="text" class="form-control" name="province" placeholder="Provinicia"
										value="{{usuarios.provincia}}"> --}}
									<select type="text" name="province" placeholder="Provincia" class="form-control">
										<option selected value="{{usuario.provincia}}">{{usuario.provincia}}
										</option>
										<option value="ES-C">A Coruña</option>
										<option value="ES-VI">Araba/Álava</option>
										<option value="ES-AB">Albacete</option>
										<option value="ES-A">Alicante/Alacant</option>
										<option value="ES-AL">Almería</option>
										<option value="ES-O">Asturias</option>
										<option value="ES-AV">Ávila</option>
										<option value="ES-BA">Badajoz</option>
										<option value="ES-PM">Balears</option>
										<option value="ES-B">Barcelona</option>
										<option value="ES-BI">Bizkaia</option>
										<option value="ES-BU">Burgos</option>
										<option value="ES-CC">Cáceres</option>
										<option value="ES-CA">Cádiz</option>
										<option value="ES-S">Cantabria</option>
										<option value="ES-CS">Castellón/Castelló</option>
										<option value="ES-CR">Ciudad Real</option>
										<option value="ES-CO">Córdoba</option>
										<option value="ES-CU">Cuenca</option>
										<option value="ES-SS">Gipuzkoa</option>
										<option value="ES-GI">Girona</option>
										<option value="ES-GR">Granada</option>
										<option value="ES-GU">Guadalajara</option>
										<option value="ES-H">Huelva</option>
										<option value="ES-HU">Huesca</option>
										<option value="ES-J">Jaén</option>
										<option value="ES-LO">La Rioja</option>
										<option value="ES-GC">Las Palmas</option>
										<option value="ES-LE">León</option>
										<option value="ES-L">Lleida</option>
										<option value="ES-LU">Lugo</option>
										<option value="ES-M">Madrid</option>
										<option value="ES-MA">Málaga</option>
										<option value="ES-MU">Murcia</option>
										<option value="ES-NA">Navarra/Nafarro</option>
										<option value="ES-OR">Ourense</option>
										<option value="ES-P">Palencia</option>
										<option value="ES-PO">Pontevedra</option>
										<option value="ES-SA">Salamanca</option>
										<option value="ES-TF">Santa Cruz de Tenerife</option>
										<option value="ES-SG">Segovia</option>
										<option value="ES-SE">Sevilla</option>
										<option value="ES-SO">Soria</option>
										<option value="ES-T">Tarragona</option>
										<option value="ES-TE">Teruel</option>
										<option value="ES-TO">Toledo</option>
										<option value="ES-V">Valencia/València</option>
										<option value="ES-VA">Valladolid</option>
										<option value="ES-ZA">Zamora</option>
										<option value="ES-Z">Zaragoza</option>
									</select>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-6 offset-md-3">
								<div class="form-group">
									<h6>Puesto</h6>
									<select class="form-control text-center" name="job">
										<option value="0">---</option>
										{{#each puesto}}
										{{#if selected}}
										<option selected value="{{idPuesto}}">{{puesto}}</option>
										{{else}}
										<option value="{{idPuesto}}">{{puesto}}</option>
										{{/if}}
										{{/each}}
									</select>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col">
								<div class="form-group">
									<h6>Descripción</h6>
									<input type="text" class="form-control" name="description" placeholder="Descripción"
										value="{{usuario.descripcion}}">
								</div>
							</div>
						</div>
						{{!-- Botones --}}
						<div class="row m-2" style="text-align:right;">
							<div class="col-12">
								<div class="btn-group">
									<button type="submit" class="btn btn-primary mr-3">Aceptar</button>
									<button type="button" class="button btn-danger"
										onclick="window.location.href='/inicio'">Cancelar</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>